<% provide(:title, "Edit user") %>

<%= render 'shared/error_messages' %>
<div class= "flex flex-col w-full max-w-md h-full container mx-auto bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
  <h1 class="text-center font-bold text-2xl mb-6">登録情報を変更する</h1>
  <%= form_with(model: @user, local: true) do |f| %>
    <div class="my-4">
      <%= f.label :name, "ユーザーネーム" %>
      <%= f.text_field :name, class: "pl-3 h-10 w-full border-solid border-2 rounded border-gray-600" %>
    </div>
    <div class="my-4">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "pl-3 h-10 w-full border-solid border-2 rounded border-gray-600" %>
    </div>
    <div class="my-4">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "pl-3 h-10 w-full border-solid border-2 rounded border-gray-600" %>
    </div>
    <div class="my-4">
      <%= f.label :password_confirmation, "パスワード再入力" %>
      <%= f.password_field :password_confirmation,  class: "pl-3 h-10 w-full border-solid border-2 rounded border-gray-600" %>
    </div>

      <%= f.submit "変更内容を保存", class: "mt-4 bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
    <% end %>
</div>