<%
=begin%>
 <%= provide(:title, "問題一覧") %>

<div class="text-center text-white">
  <div class="flex flex-row mb-10">
    <p class="mt-2">出題モード一覧▶︎</p>
    <ul class="flex flex-row">
      <li><%= link_to image_tag("explain.svg", class:"ml-4 w-12 h-12 object-cover border border-solid border-white rounded-full hover:bg-white"), questions_path(mode_num:1) %></li>
      <li><%= link_to image_tag("reaction.svg", class:"ml-4 w-12 h-12 object-cover border border-solid border-white rounded-full hover:bg-white"), questions_path(mode_num:2) %></li>
    </ul>
  </div>

  <ul class="mb-8 text-2xl">
    <% if current_page?(questions_path(mode_num: 1)) %>
      <li>Self Explain 問題集</li>
    <% else %>
      <li>Self Reaction 問題集</li>
    <% end %>
  </ul>


  <% @questions.each do |question| %>
    <div class="mx-auto pt-1 h-12 w-1/2 bg-white text-2xl text-black m-4 border border-solid border-black rounded">
      <%= question.content %>
      <%= link_to "削除",  question, class: "underline mr-4 float-right", method: :delete,
                                    data: { confirm: "You sure?" } %>
    </div>
  <% end %>
  <div class="text-center">
    <%= paginate @questions %>
  </div>

</div>
<%
=end%>
